<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ralativelayout1"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@android:color/white"
    >
    <ImageView
        android:id="@+id/person_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:id="@+id/person_name"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/person_head"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/packet_numberlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数量"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/person_head"
        android:layout_below="@id/person_name"
        />

    <TextView
        android:id="@+id/person_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/packet_numberlabel"
        android:layout_below="@id/person_name"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/person_address"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@id/person_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/person_email"
        android:layout_toRightOf="@id/person_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>