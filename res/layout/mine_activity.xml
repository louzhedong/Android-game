<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/txtv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LV"
        android:textColor="#000000"
        android:textSize="21dp"
        android:layout_toRightOf="@id/txtv1"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/txtv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/txtv2"
        />
    <TextView
        android:id="@+id/txtv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金钱"
        android:textColor="#000000"
        android:textSize="21dp"
        android:layout_toRightOf="@id/txtv3"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/txtv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/txtv4"
        />

    <TextView
        android:id="@+id/mine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"
        android:textSize="35dp"
        android:background="#cf4689"
        android:layout_margin="30dp"
        android:layout_below="@id/txtv1"
        />

    <TextView
        android:id='@+id/mine_namec'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_below="@id/txtv1"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@id/mine_name"
        />

    <TextView
        android:id="@+id/mine_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#cf4689"
        android:text="等级"
        android:textSize="35dp"
        android:layout_margin="30dp"
        android:layout_below="@id/mine_name"
        />

    <TextView
        android:id='@+id/mine_levelc'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_below="@id/mine_name"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@id/mine_level"
        />

</RelativeLayout>
