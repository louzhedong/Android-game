<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:background="#cf4689"
        />
    <TextView
        android:id="@+id/txtv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LV"
        android:textSize="21dp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/btn0"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/txtv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/txtv2"
        />
    <TextView
        android:id="@+id/txtv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金钱"
        android:textColor="#000000"
        android:textSize="21dp"
        android:layout_toRightOf="@id/txtv3"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/txtv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="21dp"
        android:layout_toRightOf="@id/txtv4"
        />

    <View android:id="@+id/emiter_top_left"
        android:layout_gravity="top|left"
        android:layout_marginTop="-20dp"
        android:layout_width="1dp"
        android:layout_height="1dp" />

    <View android:id="@+id/emiter_top_right"
        android:layout_gravity="top|right"
        android:layout_marginTop="-20dp"
        android:layout_width="1dp"
        android:layout_height="1dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="英雄"
        android:textSize="50dp"
        android:background="#cf4689"
        android:layout_margin="30dp"
        android:layout_below="@id/btn0"
        />
    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="背包"
        android:textSize="50dp"
        android:background="#cf4689"
        android:layout_below="@id/btn0"
        android:layout_toRightOf="@id/btn1"
        android:layout_margin="30dp"
        />
    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商店"
        android:textSize="50dp"
        android:background="#cf4689"
        android:layout_below="@id/btn1"
        android:layout_margin="30dp"
        />
    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="召唤"
        android:textSize="50dp"
        android:background="#cf4689"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@id/btn3"
        android:layout_margin="30dp"
        />
    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="战斗"
        android:textSize="50dp"
        android:background="#cf4689"
        android:layout_below="@+id/btn3"
        android:layout_margin="30dp"
        />
    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:textSize="50dp"
        android:background="#cf4689"
        android:layout_below="@id/btn4"
        android:layout_toRightOf="@id/btn3"
        android:layout_margin="30dp"
        />

</RelativeLayout>
