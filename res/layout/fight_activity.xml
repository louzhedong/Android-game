<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:launchMode="singleInstance">

    <TextView
        android:id="@+id/txtv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/txtv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LV"
        android:textSize="21dp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/txtv1"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/txtv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/txtv2"
        />
    <TextView
        android:id="@+id/txtv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金钱"
        android:textColor="#000000"
        android:textSize="21dp"
        android:layout_toRightOf="@id/txtv3"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/txtv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/txtv4"
        />

    <HorizontalScrollView
        android:id="@+id/fight_scv"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:background="#AA444444"
        android:layout_below="@id/txtv1"
        android:scrollbars="none" >
        <LinearLayout
            android:id="@+id/id_index_customs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

    <ListView
        android:id="@+id/fight_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/fight_scv"
        />

</RelativeLayout>
