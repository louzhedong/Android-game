<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="天空与大海"
        android:textSize="21dp"
        />
    <TextView
        android:id="@+id/txtv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LV"
        android:textSize="21dp"
        android:layout_toRightOf="@id/txtv1"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/txtv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="21dp"
        android:layout_toRightOf="@id/txtv2"
        />
    <TextView
        android:id="@+id/txtv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金钱"
        android:textSize="21dp"
        android:layout_toRightOf="@id/txtv3"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/txtv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100000"
        android:textSize="21dp"
        android:layout_toRightOf="@id/txtv4"
        />
    <TextView
        android:id="@+id/txtv_fight_rwjingyang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人物获得经验"
        android:textSize="21dp"
        android:layout_below="@id/txtv1"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/txtv_fight_rwjingyangc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="21dp"
        android:layout_below="@id/txtv1"
        android:layout_toRightOf="@id/txtv_fight_rwjingyang"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
        />
    <TextView
        android:id="@+id/txtv_fight_yxjingyang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每个英雄获得经验"
        android:textSize="21dp"
        android:layout_below="@id/txtv_fight_rwjingyang"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/txtv_fight_yxjingyangc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="21dp"
        android:layout_below="@id/txtv_fight_rwjingyang"
        android:layout_toRightOf="@id/txtv_fight_yxjingyang"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        />
    <TextView
        android:id="@+id/txtv_fight_wupin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="掉落物品:"
        android:textSize="21dp"
        android:layout_below="@id/txtv_fight_yxjingyang"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:id="@+id/img_fight_wp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fz_tiejia_s"
        android:layout_marginTop="20dp"
        android:layout_below="@id/txtv_fight_wupin"
        android:layout_alignParentTop="true"
        />





</RelativeLayout>
