<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ralativelayout1"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    >

    <ImageView
        android:id="@+id/store_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/store_name"
        android:textColor="#000000"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/store_head"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/store_pricelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格:"
        android:textSize="14dp"
        android:layout_below="@id/store_name"
        android:layout_toRightOf="@id/store_head"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/store_price"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_name"
        android:layout_toRightOf="@id/store_pricelabel"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/store_description"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_price"
        android:layout_toRightOf="@id/store_head"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/store_buy"
        android:layout_marginLeft="180dp"
        android:layout_toRightOf="@id/store_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        />

</RelativeLayout>